{% extends 'base.html.twig' %}

{% from '_macros/versus-card.html.twig' import team_card, match_team_summary %}

{% block title %}Replay Index{% endblock %}

{% block body %}
    <div class="container">
        <div>
            {% set curr_year = 'now' | date('Y') %}
            {% for datetime, replay_list in replays %}
                {% set replay_year = datetime | date('Y') %}
                {% set date_fmt = (curr_year == replay_year) ? 'F d' : 'F d, Y' %}

                <section>
                    <h2 class="border-b h4 py-2">
                        {{ datetime | date(date_fmt) }}
                    </h2>

                    {% set time_fmt = 'h:ia' %}
                    {% for replay in replay_list %}
                        {# @var summary \App\Utility\QuickReplaySummary #}
                        {% set summary = summaries[replay.id] %}

                        <article class="background-translucent border-rounded mb-3 py-3">
                            <div class="mb-2">
                                <div class="text-center small">
                                    <time
                                        datetime="{{ replay.startTime | date('c', false) }}"
                                        data-format="{{ time_fmt | dayjs_fmt }}"
                                    >
                                        {{ replay.startTime | date(time_fmt, false) }}
                                    </time>
                                </div>

                                {{ match_team_summary(
                                    summary.winner,
                                    summary.winnerScore,
                                    summary.loser,
                                    summary.loserScore
                                ) }}

                                <div class="px-3 text-center">
                                    <a
                                        href="{{ url('replay_show', { id: replay.id, filename: replay.fileName }) }}"
                                        class="c-button c-button--skinny c-button--no-shadow"
                                        title="View replay"
                                    >
                                        <small class="strong">Details</small>
                                    </a>
                                </div>
                            </div>
                        </article>
                    {% endfor %}
                </section>
            {% endfor %}
        </div>
    </div>
{% endblock %}
