{% extends 'base.html.twig' %}

{% block body %}
    <p>{{ filename }}</p>
    <p>{{ duration }} minutes</p>
    <p>
        {{ winner | team_literal | title }} ({{ winner_score }}) vs ({{ loser_score }}) {{ loser | team_literal | title }}
    </p>

    <ul>
        {% for i, player in players %}
            <li>
                {{ player.callsign }} (Team: {{ player.teamLiteral }}) [{{ player.score.kills }} - {{ player.score.deaths }} - {{ player.score.teamKills }}]

                <ul>
                    {% for j, stats in player.against %}
                        <li>
                            vs. {{ players[j].callsign }} [{{ stats.kills }} - {{ stats.deaths }}]
                        </li>
                    {% endfor %}
                </ul>
            </li>
        {% endfor %}
    </ul>

{#    {{ players | json_encode }}#}
{% endblock %}
